<Window x:Class="XDM.Wpf.UI.Dialogs.AdvancedDownloadOption.AdvancedDownloadOptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XDM.Wpf.UI.Dialogs.AdvancedDownloadOption"
        mc:Ignorable="d"
        Title="AdvancedDownloadOption" Height="450" Width="640" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.ColumnSpan="3">
            <TabItem Header="{StaticResource ND_AUTH}">
            </TabItem>
            <TabItem Header="{StaticResource DESC_NET4}">
            </TabItem>
            <TabItem Header="{StaticResource MENU_SPEED_LIMITER}">
            </TabItem>
        </TabControl>
        <Button Grid.Column="1" Grid.Row="1" Content="{StaticResource MSG_OK}" Margin="10"/>
        <Button Grid.Column="2" Grid.Row="1" Content="{StaticResource ND_CANCEL}" Margin="10"/>
    </Grid>
</Window>
